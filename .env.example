# ============================================================================
# LLM Provider Configuration
# ============================================================================

# LLM Provider Selection
# Options: openai, anthropic, google
# Default: openai (for backward compatibility)
MODEL_PROVIDER=openai

# ============================================================================
# LLM API Keys
# ============================================================================
# Provide the API key for your selected provider

# OpenAI API Key (required if MODEL_PROVIDER=openai)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (required if MODEL_PROVIDER=anthropic)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google API Key (required if MODEL_PROVIDER=google)
GOOGLE_API_KEY=your_google_api_key_here

# ============================================================================
# Other Services
# ============================================================================

# Tavily API Key (for web search functionality)
TAVILY_API_KEY=your_tavily_api_key_here

# Opik Configuration (for LLM observability)
OPIK_API_KEY=your_opik_api_key_here
OPIK_WORKSPACE=your_workspace_name
OPIK_PROJECT_NAME=braze-code-generator

# ============================================================================
# Braze Configuration
# ============================================================================

# Braze SDK Endpoint (for Web SDK initialization)
# Find your endpoint at: https://www.braze.com/docs/user_guide/administrative/access_braze/sdk_endpoints
BRAZE_SDK_ENDPOINT=your_endpoint_here

# Braze API Key (UUID format)
BRAZE_API_KEY=edc26b45-1538-4a6c-bd3f-3b95ee52d784
